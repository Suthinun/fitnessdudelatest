datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model login {
  username String @id // ใช้เป็น Primary Key
  email    String @unique // Email ต้องไม่ซ้ำ
  password String // เก็บรหัสผ่าน

  @@map("login") // ระบุชื่อจริงของตารางเป็น "login"
}

model Signup {
  id       Int    @id @default(autoincrement()) // Primary Key with Auto Increment
  name     String // เก็บชื่อผู้ใช้
  email    String @unique // Email ต้องไม่ซ้ำ
  password String // เก็บรหัสผ่าน

  @@map("Signup") // ระบุชื่อจริงของตารางเป็น "Signup"
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String
  email                String    @unique
  password             String
  resetToken           String? // ใช้ ? เพราะ resetToken อาจเป็น null
  resetTokenExpiration DateTime? // ใช้ ? เพื่อให้สามารถเป็น null ได้

  @@map("Users") // ชื่อ Table ในฐานข้อมูล
}
